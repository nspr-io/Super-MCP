{
  "security": {
    "blockedTools": [
      "filesystem__delete_file",
      "filesystem__write_file",
      "/.*delete.*/i",
      "/.*remove.*/i"
    ],
    "blockedPackages": [],
    "logBlockedAttempts": true
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/path/to/your/workspace"
      ]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_TOKEN"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sqlite",
        "--db-path",
        "/path/to/your/database.db"
      ]
    },
    "notion-api": {
      "type": "sse",
      "url": "https://mcp.notion.com/mcp",
      "name": "Notion Integration",
      "description": "Access and manage Notion workspaces",
      "oauth": true,
      "visibility": "default"
    },
    "custom-http-server": {
      "url": "https://api.example.com/mcp",
      "headers": {
        "Authorization": "Bearer YOUR_API_TOKEN",
        "X-API-Version": "v1"
      },
      "name": "Custom API Server",
      "description": "Custom HTTP MCP server with authentication"
    },
    "deep-research": {
      "command": "npx",
      "args": ["-y", "octagon-deep-research-mcp@latest"],
      "timeout": 600000,
      "env": {
        "OCTAGON_API_KEY": "YOUR_OCTAGON_API_KEY"
      },
      "name": "Deep Research",
      "description": "Long-running research tool with 10-minute timeout"
    }
  }
}