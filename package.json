{
  "name": "super-mcp-router",
  "version": "2.3.0",
  "description": "A local MCP router that aggregates multiple MCPs into a single interface for Claude",
  "private": false,
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "super-mcp-router": "dist/cli.js"
  },
  "files": [
    "dist/",
    "super-mcp-config.example.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts --config ./super-mcp-config.json",
    "start": "node dist/cli.js --config ./super-mcp-config.json",
    "test": "vitest run",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "router",
    "aggregator",
    "tools",
    "productivity"
  ],
