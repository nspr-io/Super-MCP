  "repository": {
    "type": "git",
    "url": "git+https://github.com/nspr-io/Super-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/nspr-io/Super-MCP/issues"
  },
  "homepage": "https://github.com/nspr-io/Super-MCP#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/express": "^5.0.3",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chokidar": "^5.0.0",
    "express": "^5.1.0",
    "keytar": "^7.9.0",
